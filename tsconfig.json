{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": true,
        "useDefineForClassFields": true,
        "verbatimModuleSyntax": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "types": [
            "vite/client",
            "chrome"
        ],
        "rootDir": "src",
        "outDir": "dist",
        // Linting
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}